		}
		private function setGround(map:uint):void {
			groundArray = new Array();
			groundHolder = new Array();
			for (var a:uint = 0; a<xsize; a++) {
				groundArray[a] = new Array();
				groundHolder[a] = new Array();
				for (var b:uint = 0; b<ysize; b++) {
					groundArray[a][b]=maps[map][0][b][a];
					groundHolder[a][b]=new Tile(a,b,groundArray[a][b],size);
					ground.addChild(groundHolder[a][b]);
				}
			}
		}
		private function setBuildings(map:uint):void {
			buildingArray = new Array();
			buildingHolder = new Array();
			for (var a:uint = 0; a<xsize; a++) {
				buildingArray[a] = new Array();
				for (var b:uint = 0; b<ysize; b++) {
					buildingArray[a][b]=maps[map][1][b][a];
					if (buildingArray[a][b]) {
						buildingHolder.push(new Building(a,b,size));
						building.addChild(buildingHolder[buildingHolder.length-1]);
					}
				}
			}
		}
		private function setShips(map:uint):void {
			shipArray = new Array();
			shipHolder = new Array();
			for (var a:uint = 0; a<xsize; a++) {
				shipArray[a] = new Array();
				for (var b:uint = 0; b<ysize; b++) {
					shipArray[a][b]=maps[map][2][b][a];
					if (shipArray[a][b]) {
						shipHolder.push(new Ship(a,b,size,shipArray[a][b]));
						ship.addChild(shipHolder[shipHolder.length-1]);
					}
				}
			}
		}
		private function setSelector():void {
			selector=new Selector(size);
			select.addChild(selector);
			selector.visible=false;
		}
		public function moveSelection(a:uint,b:uint):void {
			if (selector.visible==false) {
				selector.visible=true;
				selector.x=a*size;
				selector.y=b*size;
			} else {
				if (selector.x!==a*size||selector.y!==b*size) {
					selector.visible=true;
					selector.x=a*size;
					selector.y=b*size;
				} else {
					selector.visible=false;
				}
			}
		}
		public function deselect():void {
			selector.visible=false;
		}
		public function makeBuilding(a:uint,b:uint):void {
			if (buildable[groundArray[a][b]-1]) {//if tile legal to build
				buildingHolder.push(new Building(a,b,size));
				building.addChild(buildingHolder[buildingHolder.length-1]);
			}
			moveSelection(a,b);
		}
		public function addShip(a:uint,b:uint):void {
			shipHolder.push(new Ship(a,b,size,shipArray[a][b]));
			ship.addChild(shipHolder[shipHolder.length-1]);
		}
